{
	"title": "Right - VM/Remote",
	"rules": [
		{
			"description": "[Cmd (right)] => [Ctrl (right)] except for RDP, Parallels, Citrix",
			"manipulators": [
				{
					"type": "basic",
					"from": {
						"key_code": "right_command",
						"modifiers": {
							"optional": [
								"any"
							]
						}
					},
					"to": [{
						"key_code": "right_control"
					}],
